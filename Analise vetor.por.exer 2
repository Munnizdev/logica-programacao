programa
{
    funcao inicio()
    {
        inteiro vetor[10]
        inteiro i, soma = 0
        real media

        // Leitura dos 10 números
        escreva("Digite 10 números inteiros:\n")
        para (i = 0; i < 10; i++)
        {
            escreva("Número ", i + 1, ": ")
            leia(vetor[i])
        }

        // Mostrar elementos nos índices ímpares
        escreva("\nElementos nos índices ímpares:\n")
        para (i = 1; i < 10; i = i + 2)
        {
            escreva(vetor[i], " ")
        }

        // Mostrar elementos pares
        escreva("\n\nElementos pares:\n")
        para (i = 0; i < 10; i++)
        {
            se (vetor[i] % 2 == 0)
            {
                escreva(vetor[i], " ")
            }
        }

        // Calcular soma
        para (i = 0; i < 10; i++)
        {
            soma = soma + vetor[i]
        }

        // Calcular média
        media = soma / 10.0

        // Mostrar soma e média
        escreva("\n\nSoma:\n", soma)
        escreva("\n\nMédia:\n", media)
    }
}

